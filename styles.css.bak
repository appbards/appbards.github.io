body, html {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    font-family: Arial, sans-serif;
    background: linear-gradient(30deg, rgba(106, 95, 161, 1) 0%, rgba(254, 128, 182, 1) 100%);
    color: black;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
}

header {
    width: 100%;
    padding: 10px 20px;
    background: transparent;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: absolute;
    top: 0;
}

.header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
}

.title {
    font-size: 2.5em;
    color: white;
    padding-left: 20px;
}

.links {
    margin-right: 20px;
}

.links a {
    color: white;
    text-decoration: none;
    margin-left: 20px;
    font-size: 1em;
}

main {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 20px;
}

.welcome-message {
    font-size: 1.5em;
    font-weight: bold;
    color: black;
    margin-bottom: 20px;
}

.intro-text {
    font-size: 1em;
    color: black;
    max-width: 800px;
}
